<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".Activities.First_Aid_Instructions">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/appbarBackground"
            app:contentScrim="@color/appbarBackground"
            android:textColor="@color/black"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed">


            <ImageView
                android:id="@+id/contact_image"
                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="fitXY"
                app:layout_collapseMode="parallax" />


            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toptool2"
                android:layout_width="match_parent"
                app:layout_collapseMode="pin"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/ThemeOverlay.AppCompat.ActionBar" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>


    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabins2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/call_styleicon"
        app:elevation="20dp"
        app:backgroundTint="@color/yellow"
        app:maxImageSize="40dp"
        app:tint="#DDEBEB"
        app:layout_anchorGravity="bottom|right|end"
        android:layout_marginEnd="20dp"
        app:layout_anchor="@id/app_bar_call"
        />

    <androidx.core.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:id="@+id/contact_name"
                android:fontFamily="@font/roboto_light"
                android:textStyle="bold"
                android:paddingRight="70dp"
                android:paddingLeft="10dp"
                android:textSize="19sp"
                android:textColor="@color/primaryText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:text="Amang Rodriguez Memorial Medical Center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_black"
                android:padding="10dp"
                android:text="Affiliation (Specialists): "
                android:textColor="@color/black"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/affiliation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:textSize="16sp"
                android:text="N/A"
                android:textColor="@color/secondaryText"
                android:paddingLeft="10dp"
                />
            <View
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:background="@color/divide"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_black"
                android:padding="10dp"
                android:text="Service Schedule: "
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/service_sched"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:text="7AM - 9PM"
                android:textSize="16sp"
                android:textColor="@color/secondaryText"
                android:paddingLeft="10dp"/>
            <View
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:background="@color/divide"/>

            <TextView
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_black"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="Address:"/>
            <TextView
                android:id="@+id/contact_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/secondaryText"
                android:fontFamily="@font/roboto_light"
                android:text="14 Miguelito St. Paliparan Subdivision Sto Nino Marikina City"
                android:maxLines="3"
                android:textSize="16sp"
                android:paddingLeft="10dp"/>
            <View
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:background="@color/divide"/>
            <TextView
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_black"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:text="Contact No."/>
            <TextView
                android:id="@+id/contact_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:text="12321323"
                android:textSize="16sp"
                android:textColor="@color/secondaryText"
                android:paddingLeft="10dp"/>
            <View
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:background="@color/divide"/>
            <TextView
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_black"
                android:text="Services Offered:"
                android:textSize="18sp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/Services"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:maxLines="50"
                android:paddingLeft="10dp"
                android:textSize="16sp"
                android:textColor="@color/secondaryText"
                android:text="X-ray"
                />
            <View
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:background="@color/divide"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_black"
                android:padding="10dp"
                android:text="HMOs:"
                android:textSize="18sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/HMO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:maxLines="50"
                android:paddingLeft="10dp"
                android:textSize="16sp"
                android:textColor="@color/secondaryText"
                android:text="Philhealth"

                />
            <View
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:background="@color/divide"/>
            <TextView
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_black"
                android:text="Other Offers:"
                android:textSize="18sp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/Offers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:maxLines="50"
                android:paddingLeft="10dp"
                android:textColor="@color/secondaryText"
                android:textSize="16sp"
                android:text="Senior Citizen Discount"
                />
            <View
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:background="@color/divide"/>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>